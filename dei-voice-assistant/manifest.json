{
  "manifest_version": 3,
  "name": "DEI Hackathon",
  "version": "1.0",
  "description": "Help DEI people to get the best out of their voice and explain content",
  "permissions": [
    "scripting", 
    "activeTab", 
    "storage", 
    "tabs",
    "notifications",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://127.0.0.1:5001/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
